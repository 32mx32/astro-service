---
interface Props {
  title?: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
}

const {
  title = "Современная разработка с Astro и Tailwind",
  subtitle = "Astro — это революционный фреймворк для создания быстрых и оптимизированных веб-сайтов. Комбинация с Tailwind CSS обеспечивает мощные возможности стилизации.",
  ctaText = "Начать проект",
  ctaLink = "#features",
  secondaryCtaText = "Узнать больше",
  secondaryCtaLink = "/about",
} = Astro.props;
---

<section class="bg-gradient-to-b from-white to-gray-100 dark:from-gray-900 dark:to-gray-800 py-20">
  <div class="container mx-auto px-4">
    <div class="flex flex-col lg:flex-row items-center justify-between gap-12">
      <!-- Текстовый контент -->
      <div class="lg:w-1/2 animate-fade-in">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white mb-6 leading-tight">
          {title}
        </h1>
        <p class="text-lg text-gray-700 dark:text-gray-300 mb-8 max-w-xl">
          {subtitle}
        </p>
        <div class="flex flex-wrap gap-4">
          <a 
            href={ctaLink} 
            class="px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-lg transition-colors duration-300 inline-flex items-center"
          >
            {ctaText}
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
          <a 
            href={secondaryCtaLink} 
            class="px-6 py-3 bg-white dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-900 dark:text-white border border-gray-300 dark:border-gray-600 font-medium rounded-lg transition-colors duration-300"
          >
            {secondaryCtaText}
          </a>
        </div>
      </div>
      
      <!-- Иллюстрация -->
      <div class="lg:w-1/2 animate-slide-in">
        <div class="relative">
          <!-- Основная иллюстрация -->
          <div class="bg-white dark:bg-gray-800 p-4 rounded-lg shadow-xl">
            <div class="h-10 bg-gray-100 dark:bg-gray-700 rounded-t-md flex items-center gap-2 px-4">
              <div class="w-3 h-3 rounded-full bg-red-500"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
              <div class="w-3 h-3 rounded-full bg-green-500"></div>
              <div class="ml-4 text-xs text-gray-500 dark:text-gray-400">astro-project.dev</div>
            </div>
            <div class="p-6 bg-gray-50 dark:bg-gray-900 rounded-b-md">
              <div class="space-y-3">
                <div class="h-4 bg-primary-200 dark:bg-primary-900 rounded-full w-3/4"></div>
                <div class="h-4 bg-primary-100 dark:bg-primary-800 rounded-full w-full"></div>
                <div class="h-4 bg-primary-200 dark:bg-primary-900 rounded-full w-5/6"></div>
                <div class="h-8 bg-primary-300 dark:bg-primary-700 rounded-lg w-1/3 mt-6"></div>
              </div>
            </div>
          </div>
          <!-- Декоративные элементы -->
          <div class="absolute -z-10 -bottom-6 -right-6 w-64 h-64 bg-secondary-200 dark:bg-secondary-900 rounded-full opacity-50 blur-3xl"></div>
          <div class="absolute -z-10 -top-6 -left-6 w-48 h-48 bg-primary-200 dark:bg-primary-900 rounded-full opacity-50 blur-3xl"></div>
        </div>
      </div>
    </div>
  </div>
</section> 