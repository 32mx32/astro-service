---
// Компонент, предотвращающий мигание темы при загрузке страницы
---

<script is:inline>
  // Немедленно выполняемая функция (IIFE) - запускается до отрисовки страницы
  (function() {
    // Получаем сохраненную тему из localStorage
    const savedTheme = localStorage.getItem('theme');
    
    // Определяем предпочтения системы
    const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
    
    // Скрываем страницу до применения темы для предотвращения мигания
    document.documentElement.style.visibility = 'hidden';
    
    // Применяем тему до отрисовки страницы
    if (savedTheme === 'dark' || (!savedTheme && prefersDark)) {
      document.documentElement.classList.add('dark');
    } else if (savedTheme === 'light') {
      document.documentElement.classList.remove('dark');
    }
    
    // Добавляем стиль для быстрого показа страницы после загрузки
    const style = document.createElement('style');
    style.innerHTML = `
      /* Изначально скрываем, затем показываем при полной загрузке */
      html {
        visibility: hidden;
      }
      html.loaded {
        visibility: visible;
        transition: background-color 0.5s ease;
      }
    `;
    document.head.appendChild(style);
    
    // Делаем страницу видимой сразу после запуска скрипта
    document.addEventListener('DOMContentLoaded', () => {
      requestAnimationFrame(() => {
        document.documentElement.classList.add('loaded');
        document.documentElement.style.visibility = 'visible';
      });
    });
  })();
</script>